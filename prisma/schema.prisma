generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Matchups {
  id             String  @id @unique @default(uuid())
  drawEligible   Boolean
  idEvent        String
  idHomeTeam     String
  idAwayTeam     String
  idLeague       String
  strEvent       String
  strLeague      String
  strHomeTeam    String
  strAwayTeam    String
  strTimestamp   String
  strThumb       String
  oddsType       String
  oddsScope      String
  drawTeam       String?
  adminSelected  Boolean
  used           Boolean
  result         String
  locked         Boolean
  adminUnlocked  Boolean
  adminCorrected Boolean
  Odds           Odds[]
}

model Odds {
  id         String   @id @unique @default(uuid())
  matchupId  String   @unique
  oddsGameId Int
  sportsbook String
  homeOdds   Int?
  awayOdds   Int?
  drawOdds   String?
  overOdds   String?
  underOdds  String?
  homeSpread Decimal?
  awaySpread Decimal?
  total      Decimal?
  lastUpdate String // datestring
  matchup    Matchups @relation(fields: [matchupId], references: [id])
}
