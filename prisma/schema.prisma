generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Matchups {
  id             String  @id @unique @default(uuid())
  drawEligible   Boolean
  idEvent        String
  idHomeTeam     String
  idAwayTeam     String
  idLeague       String
  strEvent       String
  strLeague      String
  strHomeTeam    String
  strAwayTeam    String
  strTimestamp   String
  strThumb       String
  oddsType       String
  oddsScope      String
  drawTeam       String?
  adminSelected  Boolean
  used           Boolean
  awayScore      Int?
  homeScore      Int?
  pointsTotal    Int?
  status         String
  locked         Boolean
  adminUnlocked  Boolean
  adminCorrected Boolean
  Odds           Odds[]
}

model Odds {
  id         String   @id @unique @default(uuid())
  matchupId  String
  oddsGameId Int
  sportsbook String
  homeOdds   Int?
  awayOdds   Int?
  drawOdds   Int?
  overOdds   Int?
  underOdds  Int?
  homeSpread Float?
  awaySpread Float?
  total      Float?
  lastUpdate String // datestring
  matchup    Matchups @relation(fields: [matchupId], references: [id])
}
